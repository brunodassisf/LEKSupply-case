@model LEKSupply.Models.Mercadoria

@{
    ViewData["Title"] = "Editar";
}

<div class="d-flex align-items-center gap-2">
    <a asp-action="Index"><i class="fa-solid fa-circle-chevron-left text-secondary fs-3"></i></a>
    <h4 class="title">@ViewData["Title"] Mercadoria</h4>
</div>

<hr />

<form asp-action="Editar" class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" class="d-none" asp-for="Id" />
    <input type="hidden" class="d-none" asp-for="Codigo" />
    <div class="col-md-6 d-flex flex-column gap-3">
        <div class="form-group">
            <label asp-for="Nome" class="control-label fw-bolder"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Fabricante" class="control-label fw-bolder"></label>
            <input asp-for="Fabricante" class="form-control" />
            <span asp-validation-for="Fabricante" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="Status" class="form-select" aria-label="Default select example">
                <option value="A">Ativo</option>
                <option value="I">Inativo</option>
            </select>
        </div>
    </div>
    <div class="col-md-6 d-flex flex-column gap-3">
        <div class="form-group">
            <label asp-for="Tipo" class="control-label fw-bolder"></label>
            <input asp-for="Tipo" class="form-control" />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" for="exampleFormControlTextarea1" class="form-label fw-bolder"></label>
            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12 mt-4">
        <input type="submit" value="Salvar" class="btn btn-primary w-100 py-3" />
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
