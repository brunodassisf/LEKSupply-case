@model LEKSupply.Models.Entrada

@{
    ViewData["Title"] = "Editar";
}

<div class="d-flex align-items-center gap-2">
    <a asp-action="Index"><i class="fa-solid fa-circle-chevron-left text-secondary fs-3"></i></a>
    <h4 class="title">@ViewData["Title"] Entrada</h4>
</div>

<hr />


<form asp-action="Editar" class="d-flex flex-column gap-3">
    <input type="hidden" class="d-none" asp-for="Data" />
    <input type="hidden" class="d-none" asp-for="IdMercadoria" />
    <input type="hidden" class="d-none" asp-for="Nome" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Local" class="control-label fw-bolder"></label>
        <input asp-for="Local" readonly class="form-control" />
        <span asp-validation-for="Local" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data" class="control-label fw-bolder"></label>
        <input asp-for="Data" readonly class="form-control" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label fw-bolder"></label>
        <input asp-for="Nome" readonly class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade" class="control-label fw-bolder"></label>
        <input asp-for="Quantidade" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label fw-bolder"></label>
        <select asp-for="Status" class="form-select" aria-label="Default select example">
            <option value="A">Ativo</option>
            <option value="I">Inativo</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary py-3 w-100" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
