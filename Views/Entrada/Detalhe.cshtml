@model LEKSupply.Models.Entrada

@{
    ViewData["Title"] = "Detalhe";
}

<div class="d-flex align-items-center gap-2">
    <a asp-action="Index"><i class="fa-solid fa-circle-chevron-left text-secondary fs-3"></i></a>
    <h4 class="title">@ViewData["Title"] Entrada</h4>
</div>

<hr />

<dl class="row mt-3">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Quantidade)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Quantidade)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Data)
    </dt>
    <dd class="col-sm-10">
        @configHost.formatarDataGrid(Model.Data)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Local)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Local)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Nome)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @configHost.statusGrid(Model.Status)
    </dd>

    <a asp-action="Editar" asp-route-id="@Model.Id" class="text-decoration-none btn btn-outline-secondary mt-5 py-3 px-2 rounded">
        <i class="fa-solid fa-pen-to-square "></i><span>Editar</span>
    </a>
</dl>

